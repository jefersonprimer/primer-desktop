# ----------------------------------------
# Database
# ----------------------------------------
# Supabase PostgreSQL Connection String
DATABASE_URL=postgres://USER:PASSWORD@HOST:5432/DATABASE

# SQLite Database URL (Optional, default: sqlite:../primer.sqlite)
SQLITE_DATABASE_URL=sqlite:../primer.sqlite

# ----------------------------------------
# Google Credentials
# ----------------------------------------
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# ----------------------------------------
# Notion Credentials
# ----------------------------------------
NOTION_CLIENT_ID=your-notion-client-id
NOTION_CLIENT_SECRET=your-notion-client-secret
NOTION_REDIRECT_URI=http://localhost:5173/oauth/notion/callback
NOTION_AUTH_URL=https://api.notion.com/v1/oauth/authorize
NOTION_TOKEN_URL=https://api.notion.com/v1/oauth/token

# ----------------------------------------
# JWT Secrets
# ----------------------------------------
# Generate a secure 64-byte base64 string for production
JWT_SECRET=YOUR_JWT_SECRET_HERE

# Token lifetimes (e.g., 15m, 24h)
REFRESH_TOKEN=720h
ACCESS_TOKEN=60m

# ----------------------------------------
# SMTP (Email Sending)
# ----------------------------------------
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=email@example.com
SMTP_PASS=YOUR_SMTP_PASSWORD_HERE
SMTP_FROM=email@example.com
