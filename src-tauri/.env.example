# ----------------------------------------
# Application Configuration
# ----------------------------------------
APP_URL=http://localhost:8080/api/v1
FRONTEND_URL=http://localhost:3000
PORT=8080

# ----------------------------------------
# Database (Supabase PostgreSQL)
# ----------------------------------------
# Format:
# postgresql://<user>:<password>@<host>:<port>/<database>
DATABASE_URL=postgresql://USER:PASSWORD@HOST:5432/DATABASE

# ----------------------------------------
# Redis & Nats (Placeholders)
# ----------------------------------------
REDIS_URL=redis://localhost:6379
NATS_URL=nats://localhost:4222

# ----------------------------------------
# JWT Secrets
# ----------------------------------------
# Generate a secure 64-byte base64 string for production
JWT_SECRET=YOUR_JWT_SECRET_HERE

# Token lifetimes
ACCESS_TOKEN_TTL=15m
REFRESH_TOKEN_TTL=168h
ONE_TIME_TOKEN_DURATION=60m

# ----------------------------------------
# SMTP (Email Sending)
# ----------------------------------------
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=email@example.com
SMTP_PASS=YOUR_SMTP_PASSWORD_HERE
SMTP_FROM=email@example.com

# ----------------------------------------
# Magic Link
# ----------------------------------------
MAGIC_LINK_EXPIRY=15m

# ----------------------------------------
# Rate Limiting
# ----------------------------------------
RATE_LIMIT_ENABLED=true

# ----------------------------------------
# Security
# ----------------------------------------
KEY_ROTATION_INTERVAL=24h
MAX_EMAILS_PER_DAY=100

# ----------------------------------------
# Data Retention
# ----------------------------------------
PERMANENT_DELETION_PERIOD=2160h
RECOVERY_PERIOD=720h
MAX_DELETIONS_PER_DAY=100

# ----------------------------------------
# Cloudinary
# ----------------------------------------
# Format:
# cloudinary://<api_key>:<api_secret>@<cloud_name>
CLOUDINARY_URL=cloudinary://API_KEY:API_SECRET@CLOUD_NAME

