# ----------------------------------------
# Database
# ----------------------------------------
# Supabase PostgreSQL Connection String
DATABASE_URL=postgres://USER:PASSWORD@HOST:5432/DATABASE

# SQLite Database URL (Optional, default: sqlite:../primer.sqlite)
SQLITE_DATABASE_URL=sqlite:../primer.sqlite

// Em um arquivo .env ou config
GOOGLE_CLIENT_ID=seu-client-id-aqui
GOOGLE_CLIENT_SECRET=seu-client-secret-aqui

# ----------------------------------------
# JWT Secrets
# ----------------------------------------
# Generate a secure 64-byte base64 string for production
JWT_SECRET=YOUR_JWT_SECRET_HERE

# Token lifetimes (e.g., 15m, 24h)
REFRESH_TOKEN=720h
ACCESS_TOKEN=60m

# ----------------------------------------
# SMTP (Email Sending)
# ----------------------------------------
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=email@example.com
SMTP_PASS=YOUR_SMTP_PASSWORD_HERE
SMTP_FROM=email@example.com
