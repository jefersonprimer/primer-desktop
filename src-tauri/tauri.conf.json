{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "PrimerApp",
  "version": "0.1.0",
  "identifier": "com.primer.dev",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "PrimerApp",
        "width": 400,
        "height": 600,
        "resizable": true,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "visible": false,
        "skipTaskbar": false
      },
      {
        "label": "splashscreen",
        "title": "Splashscreen",
        "url": "splashscreen.html",
        "width": 300,
        "height": 300,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "center": true
      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["default"]
    }
  },
  "plugins": {
    "shell": {
      "open": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": [
      "resources/whisper.cpp/whisper",
      "resources/whisper.cpp/models/*"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}

